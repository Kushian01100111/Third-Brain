<%- include('partials/header') -%>
<!--  -->
<main class="">
    <div class="">
     <section class="">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el  => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>
        <form action="/login" method="POST">
         <div class="">
            <h1>Login</h1>
            <label for="exampleInputEmail1" class="form-label"
              >Email address</label>
            <input
              type="email"
              class=""
              id="exampleInputEmail1"
              name="email"
              placeholder=""
            />
          </div>
          <div class="">
            <label for="exampleInputPassword1" class="">Password</label>
            <input
             type="password"
              class=""
              id="exampleInputPassword1"
              name="password"
            />
          </div>
          <button type="submit" class="">Login</button>
          <div>
            <hr class="barritas">
            <div>
              <div>
                <p>Or login with</p>
              </div>
            </div>
            <hr class="barritas">
          </div>
          <div>
            <div>
              <div>
                <a href="/login/auth/google"><i>google</i><button>Google</button></a>
              </div>
              <div>
                <a href="/login/auth/github"><i>github</i><button>GitHub</button></a>
              </div>
              <div>
                <p>You don't have a account? <a href="/signup"><span>Sign Up</span></a></p>
              </div>  
            </div>
          </div>
        </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
