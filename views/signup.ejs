<%- include('partials/header') -%>
    <main class="">
        <div class="">
            <section class="">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                      </div>
                    <div class="">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="">
                      <label for="password" class="">Password</label>
                      <input type="password" class="" id="password" name="password">
                      <div id="passwordHelp" class="">Minimum 8 characters.</div>
                    </div>
                    <button type="submit" class="">Submit</button>
                    <div>
                      <hr class="barritas">
                      <div>
                        <div>
                          <p>Or login with</p>
                        </div>
                      </div>
                      <hr class="barritas">
                    </div>
                    <div>
                      <div>
                        <div>
                          <a href="/signup/auth/google"><i>google</i><button>Google</button></a>
                        </div>
                        <div>
                          <a href="/signp/auth/github"><i>github</i><button>GitHub</button></a>
                        </div>
                        <div>
                          <p>Already have an account? <a href="/login"><span>Login</span></a></p>
                        </div>  
                      </div>
                    </div>
                  </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>